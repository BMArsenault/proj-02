<section class="vh-75">
  <div class="container py-5 h-75">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="title">Create New Post</h2>
              <div class="field">
                <label class="label" for="post-title">Title</label>
                <div class="control">
                  <input class="input" type="text" id="post-title" name="post-title" />
                </div>
              </div>
              <div class="field">
                <label class="label" for="post-description">Description</label>
                <div class="control">
                  <textarea id="post-description" class="textarea" placeholder="Textarea"></textarea>
                </div>
              </div>
              <div class="field is-grouped">
                <div class="control">
                  <button class="button is-link" type="submit" class="btn">Create</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<br>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <div class="button" style="margin-bottom: 1rem; font-weight: bold;">
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </div>      
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

