{{#if loggedIn}}
<section class="vh-75">
  <div class="container py-5 h-75">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class=" mb-md-5 mt-md-4 pb-5">
              <h2 class="title">Edit Post</h2>
              <form class="edit-post-form">
              <div class="field">
                <label class="label" for="post-title">Title</label>
                <div class="control">
                  <input class="input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
                </div>
              </div>
              <div class="field">
                <label class="label" for="post-description">Description</label>
                <div class="control">
                  <textarea name="description" id="post-description" class="textarea" placeholder="Textarea"></textarea>
                </div>
              </div>
              <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
              <br>
              <br>
              <button class="button is-fullwidth is-success" type="submit">Update Post</button>
              <br>
              <button class="delete-post-btn button is-fullwidth is-danger" type="button" >Delete post</button>
              </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/if}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>